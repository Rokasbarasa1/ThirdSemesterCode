@page "/"
@using Blazor.Data
@inject CounterService counter

<h1>Hello, world!</h1>

Welcome to your new app.
<br />

<label>Enter a name<br /></label>

<input type="text" @bind="name" />
<br />
@code{
    private string name { get; set; }

    public string reverseString(string value)
    {
        if (value == null)
        {
            value = "";
        }
        char[] characters = value.ToCharArray();
        string reverse = "";
        for (int i = 0; i < characters.Length; i++)
        {
            reverse = reverse + characters[characters.Length - i - 1];
        }
        return reverse;
    }
}

<h1>Counter</h1>

<p>Current count: @counter.currentCount</p>

<button class="btn btn-primary" @onclick="counter.IncrementCount">Click me</button>

<Counter/>
